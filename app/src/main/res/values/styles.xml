<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name = "MyTextViewStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#07EF6E</item>

    </style>

    <style name = "MyTextViewStyle2" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#070F0E</item>

    </style>

    <style name = "MainWindow" parent="Base.TextAppearance.AppCompat.Menu">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name = "MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFF0</item>
        <item name="android:background">@drawable/back_color1</item>
    </style>

    <style name = "MyMenuStyle" parent="Base.TextAppearance.AppCompat.Menu">

        <item name="android:background">@drawable/back_color2</item>
    </style>

    <style name = "MyEditViewStyle" parent="Base.V12.Widget.AppCompat.EditText">

    </style>

</resources>